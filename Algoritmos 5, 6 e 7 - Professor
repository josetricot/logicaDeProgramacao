Algoritmo "Calcula_Distancia"
Var
        x1, x2, y1, y2, distancia: real
Inicio
         escreval("Informe dois valores para o 1° ponto")
         leia (x1, y1)
         escreva ("Informe dois valores para o  2° ponto")
         leia (x2, y2)
         distancia := raizq (quad (x2 - x1) + quad (y2 - y1))
         escreva ("Distância entre os pontos: ", distancia)
fimalgoritmo
